<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    tools:context="nextrev.perception.activities.MainActivity">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/connect_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        >
        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/connect_relative_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connected:"
                android:textColor="#040404"
                android:typeface="sans"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                />

            <ImageView
                android:id="@+id/connect_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_status_disconnected"
                android:layout_gravity="center"
                />
        </GridLayout>
        <Button
            android:id="@+id/connect_button"
            android:text="Connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
    </GridLayout>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/name_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/connect_layout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device Name:"
            android:textColor="#040404"
            android:typeface="sans"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:minWidth="150dp"
            />

        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:layout_gravity="center"
            android:textColor="#040404"
            android:typeface="sans"
            android:textSize="20sp"
            />
    </GridLayout>


    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/address_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/name_layout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device Address:"
            android:layout_gravity="center"
            android:textColor="#040404"
            android:typeface="sans"
            android:textSize="20sp"
            android:textStyle="bold"
            android:minWidth="150dp"
            />

        <TextView
            android:id="@+id/address_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:layout_gravity="center"
            android:textColor="#040404"
            android:typeface="sans"
            android:textSize="20sp"
            />
    </GridLayout>


    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/flashlight_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/address_layout"
        >
        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/flashlight_relative_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flashlight:"
                android:textColor="#040404"
                android:typeface="sans"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                />

            <ImageView
                android:id="@+id/flashlight_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_status_disconnected"
                android:layout_gravity="center"
                />
        </GridLayout>
        <Button
            android:id="@+id/flashlight_button"
            android:text="Turn on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
    </GridLayout>

    <Button
        android:id="@+id/camera_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:minWidth="100dp"
        android:minHeight="100dp"
        app:layout_constraintTop_toBottomOf="@+id/flashlight_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


</android.support.constraint.ConstraintLayout>
